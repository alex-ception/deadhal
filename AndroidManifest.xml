<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.upem.android.deadhal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.upem.android.deadhal.MenuMainActivity"
            android:label="@string/menu_main_title"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.upem.android.deadhal.BuilderActivity"
            android:label="@string/builder_title"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="fr.upem.android.deadhal.GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="landscape"
            >
        </activity>
    </application>
</manifest>
