<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	>
	<TextView
	    android:id="@+id/label_interest"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/builder_interest_label_name"
	    />
	<EditText
	    android:id="@+id/interest_name"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:inputType="text"
	    />
	<TextView
	    android:id="@+id/label_room"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/builder_interest_label_room"
	    />
	<Spinner
	    android:id="@+id/interest_room"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    />
</LinearLayout>